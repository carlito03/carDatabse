<%include partials/header.ejs%>
    

<div class="container">
  <header class="jumbotron">
      <div class="container">
          <h1>Welcome to the Autobahn</h1>
          <p>Check these super cars!</p>
          <p>
              <a class="btn btn-primary btn-large" href="/cars/new">Add a new car</a>   
          </p>
      </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap:wrap;">
      <% cars.forEach(function(car){ %>
          <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                   <img src="<%= car.image %>" />
                   <div class="captiion">
                     <h4>  <%= car.name %> </h4>
                   </div>
                   <p>
                     <a href="/cars/<%= car._id %>" class="btn btn-primary">More Info</a>
                   </p>
              </div>
          </div>
        
      <% }); %>
  </div>
</div>

<%include partials/footer.ejs %>